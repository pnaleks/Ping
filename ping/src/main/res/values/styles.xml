<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="statistic_fragment_frame_layout">
        <item name="android:layout_marginLeft">@dimen/statistic_fragment_frame_layout_margin</item>
        <item name="android:layout_marginTop">@dimen/statistic_fragment_frame_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/statistic_fragment_frame_layout_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@color/ping_color_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="statistic_fragment_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|bottom</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">@dimen/statistic_fragment_label_text</item>
        <item name="android:textColor">@color/ping_color_light</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="statistic_fragment_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">@dimen/statistic_fragment_value_text_normal</item>
        <item name="android:textColor">@color/ping_color_text</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="page_indicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/ping_color_dark</item>
        <item name="android:textSize" tools:ignore="SpUsage">10dp</item>
    </style>
    
</resources>
