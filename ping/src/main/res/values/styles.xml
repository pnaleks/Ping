<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="DeepOrangeTheme" parent="AppBaseTheme">
        <item name="pingBackgroundColor">@color/deep_orange_100</item>
        <item name="pingCardBackgroundColor">@color/deep_orange_500</item>
        <item name="pingTextColor">@color/deep_orange_50</item>
        <item name="pingHintColor">@color/deep_orange_100</item>
        <item name="pingDrawerBackgroundColor">@color/deep_orange_500</item>
        <item name="pingDrawerBackgroundColorPressed">@color/deep_orange_300</item>
    </style>

    <style name="GreenTheme" parent="AppBaseTheme">
        <item name="pingBackgroundColor">@color/green_50</item>
        <item name="pingCardBackgroundColor">@color/green_600</item>
        <item name="pingTextColor">@color/green_50</item>
        <item name="pingHintColor">@color/green_200</item>
        <item name="pingDrawerBackgroundColor">@color/green_700</item>
        <item name="pingDrawerBackgroundColorPressed">@color/green_500</item>
    </style>

    <style name="IndigoTheme" parent="AppBaseTheme">
        <item name="pingBackgroundColor">@color/indigo_50</item>
        <item name="pingCardBackgroundColor">@color/indigo_600</item>
        <item name="pingTextColor">@color/indigo_50</item>
        <item name="pingHintColor">@color/indigo_200</item>
        <item name="pingDrawerBackgroundColor">@color/indigo_700</item>
        <item name="pingDrawerBackgroundColorPressed">@color/indigo_500</item>
    </style>

    <style name="DarkGrayTheme" parent="AppBaseTheme">
        <item name="pingBackgroundColor">@color/grey_50</item>
        <item name="pingCardBackgroundColor">@color/grey_800</item>
        <item name="pingTextColor">@color/grey_50</item>
        <item name="pingHintColor">@color/grey_400</item>
        <item name="pingDrawerBackgroundColor">@color/grey_800</item>
        <item name="pingDrawerBackgroundColorPressed">@color/grey_600</item>
    </style>

    <style name="LightGrayTheme" parent="AppBaseTheme">
        <item name="pingBackgroundColor">@color/grey_300</item>
        <item name="pingCardBackgroundColor">@color/grey_50</item>
        <item name="pingTextColor">@color/grey_900</item>
        <item name="pingHintColor">@color/grey_600</item>
        <item name="pingDrawerBackgroundColor">@color/grey_200</item>
        <item name="pingDrawerBackgroundColorPressed">@color/grey_300</item>
    </style>


    <style name="AppTheme" parent="DeepOrangeTheme"/>



    <style name="statistic_fragment_frame_layout">
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">?attr/pingCardBackgroundColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="statistic_fragment_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|bottom</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">@dimen/statistic_fragment_label_text</item>
        <item name="android:textColor">?attr/pingHintColor</item>
    </style>
    
    <style name="statistic_fragment_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">@dimen/statistic_fragment_value_text_normal</item>
        <item name="android:textColor">?attr/pingTextColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="statisticsFragmentProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:alpha">0.33</item>
    </style>

</resources>
